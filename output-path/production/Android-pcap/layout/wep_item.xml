<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@color/white"
    >

    <ImageView

        android:id="@+id/wepIcon"

        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"


        android:src="@drawable/wifi_icon" />

    <TextView
        android:id="@+id/wepName"
        android:layout_toRightOf="@id/wepIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test network name"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/wepDescription"

        android:layout_toRightOf="@id/wepIcon"
        android:layout_below="@id/wepName"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Security : WEP MAC : AA:AA:AA:AA:AA"
        android:textColor="@color/colorAccent"
        />
    <TextView
        android:id="@+id/wepPassword"

        android:layout_toRightOf="@id/wepIcon"
        android:layout_below="@id/wepDescription"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=""
        android:textColor="@color/colorAccent"
        />

</RelativeLayout>